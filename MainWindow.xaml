<Window x:Class="wpfMultiThreadListViewUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListView Update" Height="350" Width="525">
    <Grid>
        <ListView x:Name="lstvwPeople" Margin="5,10,10,43">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="280" DisplayMemberBinding="{Binding Name}" />

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="10,281,0,0" VerticalAlignment="Top" Width="111" Height="28" Click="btnUpdate_Click"/>
    </Grid>
</Window>
